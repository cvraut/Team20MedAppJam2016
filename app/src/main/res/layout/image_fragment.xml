<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember these images"
        android:textSize="25sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/pen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pen"
        android:textSize="50sp"
        android:layout_alignTop="@+id/pen"
        android:layout_toRightOf="@+id/pen"
        android:layout_toEndOf="@+id/pen"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/doge"
        android:background="@drawable/doge"
        android:layout_width="217dp"
        android:layout_height="217dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_alignTop="@+id/pen" />

    <TextView
        android:id="@+id/dog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog"
        android:textSize="50sp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/doge"
        android:layout_toStartOf="@+id/doge" />

    <ImageView
        android:id="@+id/pen"
        android:background="@drawable/pen"
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:layout_above="@+id/dog_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ball"
        android:background="@drawable/ball"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pen_text"
        android:layout_alignEnd="@+id/pen_text"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/ball_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ball"
        android:textSize="50sp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_alignBottom="@+id/ball"
        android:layout_toRightOf="@+id/pen"
        android:layout_toEndOf="@+id/pen"
        android:layout_marginBottom="23dp" />
</RelativeLayout>